#include <cstdio>
#include <string>
#include <cstring>
#include <iostream>
#include <cmath>
using namespace std;
const int MAX_LEN = 20000000;
bool hash[MAX_LEN];
int map[30];
int main()
{
	int n,nc;
	string s;
	while (scanf("%d%d",&n,&nc) != EOF)
	{
		memset(hash,0,sizeof(hash));
		memset(map,0,sizeof(map));
		cin >> s;
		//printf("%d %d\n",n,nc);
		//cout << s << endl;
		string st="";
		int k=0;
		for (int i=0;i<s.size();i++)
		{
			if (map[s[i]-'a'] == 0)
			{
				map[s[i]-'a'] = k++;
			}
			if (k == nc)
				break;
		}
		int cnt = 0;
		for (int i=0;i<=s.size()-n;i++)
		{
			st = "";
			int sum = 0;
			for (int j=0;j<n;j++)
			{
				sum += map[s[i+j]-'a']*pow(nc,n-j-1);
			}
			if (hash[sum] == false)
			{
				hash[sum] = true;
				cnt++;
			}
		}
		printf("%d\n",cnt);
	}
	return 0;
}
